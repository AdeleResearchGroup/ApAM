					<artifactId>maven-bundle-plugin</artifactId>
					<version>${bundle.plugin.version}</version>
					<extensions>true</extensions>
					<configuration>
						<obrRepository>${basedir}/../APP1-Repo/app1-repo.xml</obrRepository>
