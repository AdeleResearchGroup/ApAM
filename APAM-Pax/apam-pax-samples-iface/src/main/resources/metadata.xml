<?xml version="1.0" encoding="UTF-8"?>
<apam xmlns="fr.imag.adele.apam" xmlns:ipojo="org.apache.felix.ipojo">

	<specification name="eletronic-device" interfaces="fr.imag.adele.apam.test.iface.device.Eletronic">
		<definition name="manufacturer" type="string" />
		<definition name="voltage" type="{110, 220}" />
		<definition name="currentVoltage" type="int" val="110"/>
		<definition name="hasDisplay" type="boolean" />
		<definition name="made" type="string" />
	</specification>

	<specification name="sensor"
		interfaces="{fr.imag.adele.apam.test.iface.S1}">
		<definition name="location" type="{living, kitchen, bedroom}" />
		<dependency specification="eletronic-device" />
	</specification>

	<specification name="mobile"
		interfaces="{fr.imag.adele.apam.test.iface.S2}">
		<definition name="OS" type="{Linux, Windows, Android, IOS}" />
		<dependency specification="eletronic-device" />
	</specification>

	<specification name="sunspot">
		<definition name="OS" type="{Linux, Windows, Android, IOS}" />
		<dependency specification="sensor" />
		<dependency specification="mobile" />
	</specification>

	<specification interfaces="fr.imag.adele.apam.test.iface.S1"
		name="fr.imag.adele.apam.test.iface.S1" architecture="true">
		<provides />
	</specification>

	<specification interfaces="fr.imag.adele.apam.test.iface.S2"
		name="fr.imag.adele.apam.test.iface.S2" architecture="true">
		<provides />
	</specification>

	<specification interfaces="fr.imag.adele.apam.test.iface.S3"
		name="fr.imag.adele.apam.test.iface.S3" architecture="true">
		<provides />
	</specification>

	<specification interfaces="fr.imag.adele.apam.test.iface.S4"
		name="fr.imag.adele.apam.test.iface.S4" architecture="true">
		<provides />
	</specification>

	<specification interfaces="fr.imag.adele.apam.test.iface.S5"
		name="fr.imag.adele.apam.test.iface.S5" architecture="true">
		<provides />
	</specification>

	<specification
		interfaces="fr.imag.adele.apam.test.iface.S4,fr.imag.adele.apam.test.iface.S5"
		name="fr.imag.adele.apam.test.iface.S4S5" architecture="true">
		<provides />
	</specification>




