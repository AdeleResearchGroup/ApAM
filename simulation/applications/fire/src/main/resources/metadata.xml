<apam xmlns="fr.imag.adele.apam" xmlns:ipojo="org.apache.felix.ipojo"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="fr.imag.adele.apam http://repository-apam.forge.cloudbees.com/release/schema/ApamCore-0.0.5.xsd
                          org.apache.felix.ipojo http://felix.apache.org/ipojo/schemas/CURRENT/core.xsd">
                          
    <implementation name="SimpleFireEvacuation" 
    				classname="fr.imag.adele.apam.application.fire.SimpleFireEvacuation"
    				push="fireDetected">
        
        <relation field="doors" specification="Door">
            <constraints>
            	<instance filter="(access=true)"/>
            </constraints>
        </relation>
        
        <relation specification="SmokeDetector">
            <message push="smokeDetected"/>
        </relation>
    
        <relation name="notification" specification="CoreSwitchSensorSpec" creation="eager">
            <message push="simulationNotification"/>
            <constraints>
            	<instance filter="(deviceId=ENO2796f3)"/>
            </constraints>
        </relation>
     
        <definition name="location" type="string"/>
        
    </implementation>

</apam>
