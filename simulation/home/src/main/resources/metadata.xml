<apam xmlns="fr.imag.adele.apam" xmlns:ipojo="org.apache.felix.ipojo"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="fr.imag.adele.apam http://repository-apam.forge.cloudbees.com/release/schema/ApamCore.xsd
                          org.apache.felix.ipojo http://felix.apache.org/ipojo/schemas/CURRENT/core.xsd">



	<composite name="Home" singleton="true">

		<contentMngt>
		
			<own specification="Zone" />
			
			<start implementation="SecurityDomain" name="securityDomain"/>

			<dependency override="true" source=".*" id=".*" specification="Presence" eager="true" />

		</contentMngt>
		
	</composite>


	<specification name="Zone">
		<definition name="location" type="string" />
	</specification>

	<composite name="Room" specification="Zone" singleton="false">
		
		<contentMngt>
			
			<!--  Automatically start the lighten application and force binding to presence sensor  
			<start implementation="BasicLightAutomation" name="ligthen">
				<property name="location" value="$this.composite$location"/>
			</start>
			-->
			
			<dependency override="true" source=".*Automation" id=".*" specification="Presence" eager="true" />
			
			
		</contentMngt>
	</composite>

</apam>
