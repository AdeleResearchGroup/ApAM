<apam xmlns="fr.imag.adele.apam" xmlns:ipojo="org.apache.felix.ipojo"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="fr.imag.adele.apam http://repository-apam.forge.cloudbees.com/release/schema/ApamCore-0.0.5.xsd
                          org.apache.felix.ipojo http://felix.apache.org/ipojo/schemas/CURRENT/core.xsd">

	<implementation name="SimulatedSmokeDetector"
			specification="SmokeDetector"
			classname="fr.imag.adele.apam.device.smoke.impl.SimulatedSmokeDetector"
			push="switchStatusChanged">
		
		<definition name="deviceId"   	type="string" />
			
		<relation name="activation" specification="CoreSwitchSensorSpec" multiple="false" resolve="exist" creation="eager">
			<message push="switchStatusChanged"/>
			
			<constraints>
				<instance filter="(deviceId=$this$deviceId)"/>
			</constraints>
		</relation>

	</implementation>
	
</apam>
