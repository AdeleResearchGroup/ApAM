<apam xmlns="fr.imag.adele.apam" xmlns:ipojo="org.apache.felix.ipojo">

	<specification name="S2Compile"
		interfaces="{fr.imag.adele.apam.test.TestCompile.S2, A.B.C.wrongInterface}"
		message="{M1, M2, M3}">
		<specification name="S4" />
		<dependency interface="fr.imag.adele.apam.test.s4.S4" />
		<property name="shared" value="false" />
		<property name="scope" value="global" />  <!--  type is missing --> -->
		<property name="test-spec" value="coucou" type="string" />
		<definition name="b" type="boolean" value="true" />
		<definition name="c" type="string" />
		<definition name="Dd" type="int" />
		<interface name="example.S4" id="xxx" />
		<interface name="example.S3" id="yyy" />
		<message name="example.DataType2" id="yy" />
	</specification>

	<implementation name="S2ImplCompile"
		classname="fr.imag.adele.apam.test.TestCompile.S2Impl" specification="S2Compile"
		messages="{M5, M2, M3}">						<!-- Message M1 missing -->
		<!-- Interfaces missing:{fr.imag.adele.apam.test.s2.S2, XXY} -->
		<property name="shared" value="false" />
		<property name="borrowImplementation" value="true" />
		<property name="test" value="yes" /> 	<!--  Attribute test undefined --> 
		<property name="b" value="yes" />		<!--  b is boolean -->
		<property name="B" value="yes" />		<!-- B is undefined. Case sensitive -->
		<property name="c" value="xxx" />
		<property name="test-spec" value="anotherValue" /> <!--  cannot redefine -->
		
		<definition name="A1" type="string" />
		<definition name="A2" type="int" value="xxxyyy" /> <!--  invalid initial value -->

		<specification name="S3">				<!-- ok-dependence multiple. defined 3 times. Id non defined -->
			<interface field="s3s" />
			<interface field="s3_2" />
		</specification>
		<specification name="S3">				<!-- re-defined Id non defined -->
			<interface field="s3s2" />			<!-- Attribute s3s2 is collection -->
			<interface field="s4_2" />			<!-- Attribute s4-2 is simple. Not in S3 -->
		</specification>
		<specification name="S3">
			<interface field="s3s" />			<!-- Attribute s3s is allready defined collection -->
			<interface field="s3" />			<!-- Attribute s3 is simple -->
		</specification>

		<interface field="s4_1" />
		<interface field="s4_2" />		<!-- Field already defined -->
		<message name="T2" />  			<!-- Field missing -->
		<message method="getT2" />		<!-- Method missing -->
		<ipojo:requires field="apam" />
	</implementation>

	<implementation name="S2SimpleCompile"
		classname="fr.imag.adele.apam.test.TestCompile.S2Simple"
		specification="S2Compile">
		<property name="shared" value="false" />
		<property name="test22" value="yes" /> 		<!-- test22 undefined -->

		<specification name="S3" id="S3Id">
			<interface field="fieldS3" />
			<constraints>
				<implementation filter="(apam-composite=true)" />
				<instance filter="(SCOPE=GLOBAL)" /> 		<!-- SCOPE undefined -->
				<instance filter="(bS3=GLOBAL)" />
				<instance filter="(A5=GLOBAL)" />			<!-- A2 is an int -->
				<instance filter="(MyBool=tttt)" />			<!-- MyBool is boolean -->
				<instance filter="(MyBool=true)" />
				<instance filter="(mybool=false)" />		<!-- Case sensitive ? -->
				<instance filter="(&amp;(A2=5)(mybool=false))" />
				<instance filter="(&amp;(A2=GLOBAL) (fghbsrthg=cc))" />
				<!-- <instance filter="((A2=GLOBAL) (fghbsrthg=cc))" /> -->
			</constraints>
			<preferences>
				<implementation filter="(x=10)" />
				<instance filter="(b=false)" />
				<instance filter="(b2=false)" />
			</preferences>
		</specification>

		<implementation name="S3Impl" id="S3Id"> <!--  S3Id already defined -->
			<interface field="fieldS3" />
			<constraints>
				<instance filter="(S3Impl-Attr=good)" />	<!-- undefined -->
				<instance filter="(S3Impl-Bad=bad)" /> 		<!-- undefined -->
				<instance filter="(x=good)" />
				<instance filter="(A2=badInt)" /> 		<!-- bad value int -->
				<instance filter="(A2=455)" />
			</constraints>
		</implementation>

		<interface field="s4" id="s4Id">
			<constraints>
				<implementation filter="(apam-composite=true)" />
				<instance filter="(SCccOPE=GLOBAL)" />
			</constraints>
			<preferences>
				<implementation filter="(x2=10)" />
				<instance filter="(bxc=false)" />
			</preferences>
		</interface>
	</implementation>


	<composite name="GoodComposite" specification="S2" mainImplem="S2Impl" /> <!--  minimal good -->


	<composite name="ContentComposite" specification="S2Compile" mainImplem="S2ImplCompile">
		<contentMngt>			
			<start implementation="S3Impl" name="s3Impl-int">
				<property name="S3Impl-Attr" value="val" />
				<specification name="S4">
					<constraints>
						<constraint filter="(propre=true)" /> <!-- propre is not defined in S4 -->
						<implementation filter="xxx" />  <!-- Not valid -->
					</constraints>
					<preference> 						<!-- Not valid -->
 						<implementation filter="xxx" />  <!-- Not valid -->
					</preference>
				</specification>
				<trigger>
					<specification name="la spec qui declenche le demmarage"> <!-- Not valid unknown spec-->
						<constraints>
							<constraint filter="la condition de demarrage" /> <!-- Not valid filter syntax-->
						</constraints>
					</specification>
				</trigger>
				<trigger>
					<implementation name="S3Impl"> 
						<constraints>
							<constraint filter="(impl-name=S3Impl)" /> 
						</constraints>
					</implementation>
				</trigger>
			</start>

			<visibility>
				<borrow implementation="(b=true)" instance="false" />
				<local implementation="true" instance="true" />
				<friend implementation="(name=xxx)" instance="(yyy)" />
				<application />
			</visibility>

			<own specification="S4" />
			<own implementation="S4Impl" />
			<own implementation="zzz" />

			<state implementation="S1Impl" property="location" />
<!-- 						<definition name="location" type="{living, kitchen, bedroom}" value="bedroom" /> -->
			
			<grant implementation="S2Impl" dependency="S4" when="living" />
			<grant implementation="S2Impl" dependency="Swrong" when="living" />
			<grant implementation="S3Impl" dependency="S4" when="living" />
			<grant implementation="S3yyy" dependency="S4" when="living" />

			<state implementation="S1Impl" property="OS" />

			<override implementation="S3Impl" dependency="S4" missing="wait">
				<constraints>
					<implementation filter="(apam-composite=true)" />
					<instance filter="(b=true)" />
				</constraints>
				<preferences>
					<implementation filter="(b=10)" />
					<instance filter="(c=hello)" />
				</preferences>
			</override>

			<specification name="Spec_A*">
				<constraints>
					<constraint filter="(apam-composite=true)" />
				</constraints>
				<preferences>
					<constraint filter="(SCOPE=GLOBAL)" />
				</preferences>
			</specification>

		</contentMngt>


	</composite>

	<composite name="S2CompoCompile" specification="S2Compile"
		mainImplem="S3Impl" messages="{M5, M6}"
		interfaces="{fr.imag.adele.apam.test.s2.SZZZ,fr.imag.adele.apam.apamAPI.YYYYYYY}"> <!-- interface does not exist -->
		<property name="shared" value="false" />

		<instances internal="true" local=".*" />   <!-- Old syntax -->
		<implementations internal="true" local="S.Im.*" /> <!-- Old syntax -->
		<dependency interface="fr.imag.adele.apam.test.s4.S4"
			source="S2Compile" /> <!-- Old syntax -->
		<dependency specification="S5" source="S3" /> <!-- Old syntax -->

		<contentMngt>
			<visibility>
				<borrow implementation="*" instance="false" />
				<local implementation="(test = tree)" />
				<friend toto="xxxx" />
				<application implementation="*" instance=" ((bad syntax)" />
			</visibility>
		</contentMngt>

		<dependencies>
			<specification name="S4" />
			<message name="msgType1" />
			<interface name="S4" />
		</dependencies>
	</composite>

	<instance implementation="S2ImplCompile" name="S2ImplCompile-instance">
		<property name="shared" value="false" />
		<property name="test-spec" value="coucous4" />
		<property name="A2" value="yes" />
		<property name="c3" value="xxx" />
		<property name="b" value="bbb" />
		<property name="xyz" value="yyy" />
		<specification name="S3" id="S3Id">		<!-- id is undefined -->
			<constraints>
				<implementation filter="(apam-composite=true)" />
				<instance filter="(SCccOPE=GLOBAL)" /> <!-- attribute undefined -->
			</constraints>
			<preferences>
				<implementation filter="(x=10)" />
				<instance filter="(bxc=false)" />
			</preferences>
		</specification>
	</instance>

	<instance name="InstS2Impl" />					<!-- implementation is missing -->
	<instance implementation="S2ImplCompile" /> 			<!-- name is missing -->
	<instance implementation="S3Impl" name="S2CompoCompile" />	<!-- name S2CompoCompile is already used -->
	<instance implementation="SXYZT" name="sdfg" />	<!-- implementation does not exist -->

</apam>


