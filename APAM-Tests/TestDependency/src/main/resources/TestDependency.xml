<apam xmlns="fr.imag.adele.apam" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
 xsi:schemaLocation="fr.imag.adele.apam http://repository-apam.forge.cloudbees.com/release/schema/ApamCore.xsd" >    


	<implementation name="Dependency"
		classname="fr.imag.adele.apam.test.dependency.Dependency" specification="S2">
		<dependency field="s3s" multiple="true"/>
		<dependency field="s3s2" multiple="true"/>
		<dependency field="s3_2" />
		<dependency field="s3" />

		<dependency field="s4_1" multiple="true">
			<constraints>
				<implementation filter="" />
				<implementation filter="" />
				<implementation filter="" />
			</constraints>
		</dependency>
		<dependency implementation="" field="s4_2" >
			<constraints>
				<instance filter="" />
				<instance filter="" />
			</constraints>
		</dependency>
		<dependency field="s4_3" >
			<preferences>
				<instance filter="" />
				<instance filter="" />
				<instance filter="" />
			</preferences>
		</dependency>
	</implementation>

	<instance implementation="Dependency" name="testDependencyINst" />

<!-- La spec de S2 -->
	<specification name="SDep">
			<property name="S1-Enum" value="s1-2" type="{s1-1, s1-2, s1-3}"/>
			<property name="S1-Attr" value="coucou" type="string"/>
			<definition name="s1b" type="boolean" value="true" />
			<definition name="s1c" type="string" />
			<definition name="s1i" type="int" />
			<definition name="location" type="{living, kitchen, bedroom}" value="bedroom" />
			<definition name="Enumere" type="{v1, v2, v3, v4}" />
			<definition name="OS" type="{Linux, Windows, Android, IOS}" />	
	</specification>

<!-- Les implems de S2 -->
	<implementation name="Impl1"
		classname="fr.imag.adele.apam.test.dependency.S2Simple" specification="SDep" >
		<property name="s1b" value="false" />
		<property name="OS" value="IOS" />
		<property name="Enumere" value="v2" />
		<definition name="fieldAttr" field="theFieldAttr" internal="true" type="string" value="bidon"/>
		<definition name="1-Bool" type="boolean" value="true" />
		<definition name="1-String" type="string" />
		<definition name="1-location" type="{FinalLiving, FinalKitchen, FinalLedroom}" />
		<definition name="enumeration1" type="{f1, f2, f3, f4}" />
	</implementation>

 	<implementation name="Impl2"
		classname="fr.imag.adele.apam.test.dependency.S2ImplBis" specification="SDep" >
	</implementation>

	<implementation name="Impl3" 
		classname="fr.imag.adele.apam.test.dependency.S2Final" specification="SDep" >
	</implementation>

<!-- Les instances pre existantes -->
	<instance implementation="Impl1" name="inst1_2" >
	</instance>

	<instance implementation="Impl1" name="inst1_3" >
	</instance>

	<instance implementation="Impl1" name="inst1_4" >
	</instance>

	<instance implementation="Impl1" name="inst1_5" >
	</instance>

	<instance implementation="Impl1" name="inst1_6" >
	</instance>

<!-- Les implems de S3  -->
	<specification name="DepS3"
		interfaces="[fr.imag.adele.apam.test.dependency.S3_1,fr.imag.adele.apam.test.dependency.S3_2]">
	</specification>


	<implementation name="S3Impl"
		classname="fr.imag.adele.apam.test.dependency.S3Impl" specification="DepS3">
	</implementation>

	<implementation name="S3Impl2"
		classname="fr.imag.adele.apam.test.dependency.S3Impl" specification="DepS3">
	</implementation>

</apam>
