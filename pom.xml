<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>fr.imag.adele.apam</groupId>
	<artifactId>apam-project</artifactId>
	<packaging>pom</packaging>
	<version>0.0.1</version>
	<name>ApAM Project</name>


	<properties>
		<!-- apam version -->
		<apam.current.version>${project.version}</apam.current.version>

		<!-- Dependencies version -->
		<osgi.version>4.2.0</osgi.version>
		<felix.osgi.version>1.4.0</felix.osgi.version>
		<ipojo.version>1.8.0</ipojo.version>
		<ipojo.plugin.version>1.8.0</ipojo.plugin.version>
		<bundle.plugin.version>2.3.7</bundle.plugin.version>
		<compiler.plugin.version>2.5.1</compiler.plugin.version>
		<javadoc.plugin.version>2.9</javadoc.plugin.version>
		<slf4j.version>1.6.6</slf4j.version>

		<!-- Test dependencies version -->
		<mockito.version>1.8.5</mockito.version>
		<junit.version>4.8.2</junit.version>

		<!-- Encoding -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<profiles>

        <!-- Profile used to build ApAM  -->
        <profile>
            <id>all</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <modules>
                <module>runtime</module>
                <module>plugins</module>
                <module>tools</module>
                <module>documentations/tutorials</module>
                <module>distributions</module>
            </modules>
        </profile>

        <!-- Profile used to build tutorials -->
        <profile>
            <id>tutorials</id>
            <modules>
                <module>documentations/tutorials</module>
            </modules>
        </profile>

        <!-- Profile used to build icasa component -->
        <profile>
            <id>icasa-components</id>
            <modules>
                <module>simulation</module>
            </modules>
        </profile>

        <!-- Profile used to build tools -->
        <profile>
            <id>tools</id>
            <modules>
                <module>tools</module>
            </modules>
        </profile>

		<!-- Profile used to build ApAM core bundles -->
		<profile>
			<id>runtime</id>

			<modules>
				<module>runtime</module>
			</modules>
		</profile>

		<!-- Profile used to build ApAM plugins -->
		<profile>
			<id>plugins</id>
			<modules>
				<module>plugins</module>
			</modules>
		</profile>

        <!-- Profile used to build ApAM distributions -->
        <profile>
            <id>distributions</id>
            <modules>
                <module>distributions</module>
            </modules>
        </profile>


		<!-- Profile used in order to run the tests -->
		<profile>
			<id>prepare-tests</id>
			<modules>
				<module>tests</module>
			</modules>
		</profile>

		<!-- Profile used in order to run the tests -->
		<profile>
			<id>run-tests</id>
			<modules>
				<module>tests</module>
			</modules>
		</profile>


		<profile>
			<id>release</id>
			<activation>
				<property>
					<name>performRelease</name>
					<value>true</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-release-plugin</artifactId>
						<version>2.2.2</version>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-javadoc-plugin</artifactId>
						<version>${javadoc.plugin.version}</version>
						<configuration>
							<excludePackageNames>*.internal,*.internal.*,*.impl</excludePackageNames>
						</configuration>
					</plugin>
            	</plugins>
			</build>
		</profile>

	</profiles>

