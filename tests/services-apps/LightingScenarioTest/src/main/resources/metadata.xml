<apam xmlns="fr.imag.adele.apam" xmlns:ipojo="org.apache.felix.ipojo"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="fr.imag.adele.apam http://repository-apam.forge.cloudbees.com/release/schema/ApamCore-0.0.3.xsd" >    

<!--  1째 Devices : The Buttons -->
 	<specification name="Button"
	   interfaces="fr.imag.adele.apam.test.lights.devices.SimpleButton"
	   messages="fr.imag.adele.apam.test.lights.devices.messages.ButtonPressed">	   
 	   <definition name="location" type="kitchen, living, bedroom" />
 	   <definition name="name" type="string" />
	</specification>
	
	<implementation name="ButtonGUI"
		specification="Button"
		classname="fr.imag.adele.apam.test.lights.button.SwingButtonImpl"
		push="pressButton">
        <callback onInit="started" onRemove="stopped"/>
		<definition name="location" type="kitchen, living, bedroom" field="myLocation"/>
        <!-- Use of predefined property of apam -->
        <definition name="name" type="string" field="myName"/>
	</implementation>

    <implementation name="ButtonNotGUI"
                    specification="Button"
                    classname="fr.imag.adele.apam.test.lights.button.ButtonImpl"
                    push="pressButton">
        <callback onInit="started" onRemove="stopped"/>
        <definition name="location" type="kitchen, living, bedroom" field="myLocation"/>
        <!-- Use of predefined property of apam -->
        <definition name="name" type="string" field="myName"/>
    </implementation>

	<apam-instance implementation="ButtonGUI" name="buttonKitchen">
		<property name="location" value="kitchen"/>
	</apam-instance>

	<apam-instance implementation="ButtonNotGUI" name="buttonLivingOne">
		<property name="location" value="living"/>
	</apam-instance>

<!-- 2째 Devices : The Lights -->
 	<specification name="Light"
	   interfaces="fr.imag.adele.apam.test.lights.devices.BinaryLight"
	   messages="fr.imag.adele.apam.test.lights.devices.messages.LightStatusChanged">
 	   <definition name="location" type="kitchen, living, bedroom" />
 	   <definition name="name" type="string" />
	</specification>

	<implementation name="BinaryLightImpl"
		specification="Light"
		classname="fr.imag.adele.apam.test.lights.binarylight.BinaryLightImpl"
		push="fireLightStatus">
		<callback onInit="started" onRemove="stopped"/>
		<definition name="location" type="kitchen, living, bedroom" field="myLocation"/>
        <!-- Use of predefined property of apam -->
        <definition name="name" type="string" field="myName"/>

    </implementation>
	
	<apam-instance implementation="BinaryLightImpl" name="lightKitchen">
		<property name="location" value="kitchen"/>
	</apam-instance>

	<apam-instance implementation="BinaryLightImpl" name="lightLivingOne">
		<property name="location" value="living"/>
	</apam-instance>
 	
<!--  3째 Services : Light Application -->
	<implementation name="LightApplication"
		classname="fr.imag.adele.apam.test.lights.services.LightingApplication">
		<callback onInit="start" onRemove="stop"/>
        <!-- Use of predefined property of apam -->
        <definition name="name" type="string" field="myName"/>
		<relation name="depLights" specification="Light" field="theLights" multiple="true" added="newLight"/>
        <relation name="depButtons" specification="Button" multiple="true"><!-- field="theButtons"  added="newButton" removed="removeButton">  -->
			<message push="aButtonHasBeenPressed" />
		</relation>
	</implementation>

<!--  4째 Services : Graphical Control Panel for the Devices -->
	<implementation name="LightManagerPanel"
		classname="fr.imag.adele.apam.test.lights.panel.LightManagerTester">
		<callback onInit="started" onRemove="stopped"/>
        <definition name="toShow" type="int" field="toShow" value="0" method="show"/>
<!--         <definition name="testPressButton" type="string" field="myTestedButtonName" method="testPressButton"/> -->
        <relation specification="Button" field="theButtons" multiple="true" added="newButton" removed="removeButton"/>
		<relation  specification="Light" field="theLights" multiple="true" added="newLight" removed="removeLight"/>
<!-- 			<message push="aLightStatusHasChanged" /> 
		</relation> -->
	</implementation>

<!--    <apam-instance implementation="LightManagerPanel" name="myPanel"> -->
<!--     </apam-instance> -->
	

	<apam-instance implementation="LightApplication" name="myKitchen">
 	<relation name="depLights" specification="Light" >
		<constraints> 
			<instance filter="(location=kitchen)"/>
		</constraints>
	</relation> 
		<relation name="depButtons" specification="Button" multiple="true">
		<constraints>
			<instance filter="(location=kitchen)"/>
		</constraints>
	</relation>  
	</apam-instance>
	
</apam>