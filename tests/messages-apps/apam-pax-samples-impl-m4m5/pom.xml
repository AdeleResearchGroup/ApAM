				<artifactId>apam-maven-plugin</artifactId>
			</plugin>

		</plugins>
	</build>
	<parent>
		<groupId>fr.imag.adele.apam.tests</groupId>
		<artifactId>messages-apps</artifactId>
		<version>0.0.3-SNAPSHOT</version>
