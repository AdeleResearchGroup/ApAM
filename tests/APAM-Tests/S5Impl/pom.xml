<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  	<parent>
		<artifactId>APAM-Tests-Old</artifactId>
		<groupId>fr.imag.adele.apam</groupId>
		<version>0.0.5-SNAPSHOT</version>
	</parent>
	
	
	<artifactId>S5Impl</artifactId>
	
	<packaging>bundle</packaging>
	<name>S5Impl</name>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
			</plugin>
			
			<plugin>
				<groupId>fr.imag.adele.apam</groupId>
				<artifactId>apam-maven-plugin</artifactId>
				<version>${project.version}</version>
				<executions>
					<execution>
						<goals>
							<goal>apam-bundle</goal>
						</goals>
						<configuration>
							<metadata>src/main/resources/S5Impl.xml</metadata>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>


	<dependencies>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.apache.felix.framework
			</artifactId>
			<version>1.4.0</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>fr.imag.adele.apam</groupId>
			<artifactId>S5</artifactId>
			<version>${project.version}</version>
			<type>bundle</type>
		</dependency>		
		<dependency>
			<groupId>fr.imag.adele.apam</groupId>
			<artifactId>S2</artifactId>
			<version>${project.version}</version>
			<type>bundle</type>
			<scope>compile</scope>
		</dependency>		
		<dependency>
			<groupId>fr.imag.adele.apam</groupId>
			<artifactId>apam-core</artifactId>
			<version>${project.version}</version>
			<type>bundle</type>
			<scope>compile</scope>
		</dependency>
	</dependencies>

</project>