<?xml version="1.0" encoding="UTF-8"?>
<plugin>
  <name>Apam2MavenPlugIn Maven Mojo</name>
  <description></description>
  <groupId>fr.imag.adele.apam</groupId>
  <artifactId>Apam2MavenPlugIn</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <goalPrefix>Apam2MavenPlugIn</goalPrefix>
  <isolatedRealm>false</isolatedRealm>
  <inheritedByDefault>true</inheritedByDefault>
  <mojos>
    <mojo>
      <goal>apam-ipojo-bundle</goal>
      <description>This plugin does the same as ipojo plugin and adds Apam information to the OBR file associated with an Apam bundle.</description>
      <requiresDependencyResolution>runtime</requiresDependencyResolution>
      <requiresDirectInvocation>false</requiresDirectInvocation>
      <requiresProject>true</requiresProject>
      <requiresReports>false</requiresReports>
      <aggregator>false</aggregator>
      <requiresOnline>false</requiresOnline>
      <inheritedByDefault>true</inheritedByDefault>
      <phase>package</phase>
      <implementation>fr.imag.adele.apam.apam2MavenPlugIn.Apam2MavenPlugin</implementation>
      <language>java</language>
      <instantiationStrategy>per-lookup</instantiationStrategy>
      <executionStrategy>once-per-session</executionStrategy>
      <threadSafe>false</threadSafe>
      <parameters>
        <parameter>
          <name>localRepository</name>
          <type>org.apache.maven.artifact.repository.ArtifactRepository</type>
          <required>true</required>
          <editable>false</editable>
          <description>Local Repository.</description>
        </parameter>
        <parameter>
          <name>m_buildDirectory</name>
          <type>java.lang.String</type>
          <required>true</required>
          <editable>true</editable>
          <description>The directory for the generated JAR.</description>
        </parameter>
        <parameter>
          <name>m_classifier</name>
          <alias>classifier</alias>
          <type>java.lang.String</type>
          <required>false</required>
          <editable>true</editable>
          <description>If set, the manipulated jar will be attached to the project as a separate artifact.</description>
        </parameter>
        <parameter>
          <name>m_ignoreAnnotations</name>
          <alias>ignoreAnnotations</alias>
          <type>boolean</type>
          <required>false</required>
          <editable>true</editable>
          <description>Ignore annotations parameter.</description>
        </parameter>
        <parameter>
          <name>m_ignoreEmbeddedXSD</name>
          <alias>IgnoreEmbeddedSchemas</alias>
          <type>boolean</type>
          <required>false</required>
          <editable>true</editable>
          <description>Ignore embedded XSD parameter.</description>
        </parameter>
        <parameter>
          <name>m_metadata</name>
          <alias>metadata</alias>
          <type>java.lang.String</type>
          <required>false</required>
          <editable>true</editable>
          <description>Location of the metadata file or iPOJO metadata configuration.</description>
        </parameter>
        <parameter>
          <name>m_outputDirectory</name>
          <type>java.io.File</type>
          <required>true</required>
          <editable>false</editable>
          <description>The directory containing generated classes.</description>
        </parameter>
        <parameter>
          <name>m_project</name>
          <type>org.apache.maven.project.MavenProject</type>
          <required>true</required>
          <editable>false</editable>
          <description>The Maven project.</description>
        </parameter>
        <parameter>
          <name>m_supportedProjectTypes</name>
          <type>java.util.List</type>
          <required>false</required>
          <editable>true</editable>
          <description>Project types which this plugin supports.</description>
        </parameter>
      </parameters>
      <configuration>
        <localRepository implementation="org.apache.maven.artifact.repository.ArtifactRepository">${localRepository}</localRepository>
        <m_buildDirectory implementation="java.lang.String">${project.build.directory}</m_buildDirectory>
        <m_classifier implementation="java.lang.String">${ipojo.classifier}</m_classifier>
        <m_ignoreAnnotations implementation="boolean" default-value="false"/>
        <m_ignoreEmbeddedXSD implementation="boolean" default-value="false"/>
        <m_outputDirectory implementation="java.io.File">${project.build.outputDirectory}</m_outputDirectory>
        <m_project implementation="org.apache.maven.project.MavenProject">${project}</m_project>
      </configuration>
      <requirements>
        <requirement>
          <role>org.apache.maven.project.MavenProjectHelper</role>
          <field-name>m_helper</field-name>
        </requirement>
      </requirements>
    </mojo>
  </mojos>
  <dependencies>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-plugin-api</artifactId>
      <type>jar</type>
      <version>2.0</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-archiver</artifactId>
      <type>jar</type>
      <version>2.0</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-project</artifactId>
      <type>jar</type>
      <version>2.0</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-profile</artifactId>
      <type>jar</type>
      <version>2.0</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-model</artifactId>
      <type>jar</type>
      <version>2.0</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-artifact-manager</artifactId>
      <type>jar</type>
      <version>2.0</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-repository-metadata</artifactId>
      <type>jar</type>
      <version>2.0</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven.wagon</groupId>
      <artifactId>wagon-provider-api</artifactId>
      <type>jar</type>
      <version>1.0-alpha-5</version>
    </dependency>
    <dependency>
      <groupId>org.codehaus.plexus</groupId>
      <artifactId>plexus-container-default</artifactId>
      <type>jar</type>
      <version>1.0-alpha-8</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <type>jar</type>
      <version>3.8.1</version>
    </dependency>
    <dependency>
      <groupId>org.codehaus.plexus</groupId>
      <artifactId>plexus-archiver</artifactId>
      <type>jar</type>
      <version>1.0-alpha-3</version>
    </dependency>
    <dependency>
      <groupId>classworlds</groupId>
      <artifactId>classworlds</artifactId>
      <type>jar</type>
      <version>1.1-alpha-2</version>
    </dependency>
    <dependency>
      <groupId>org.codehaus.plexus</groupId>
      <artifactId>plexus-utils</artifactId>
      <type>jar</type>
      <version>1.1</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-artifact</artifactId>
      <type>jar</type>
      <version>2.0</version>
    </dependency>
    <dependency>
      <groupId>xerces</groupId>
      <artifactId>xercesImpl</artifactId>
      <type>jar</type>
      <version>2.9.1</version>
    </dependency>
    <dependency>
      <groupId>xml-apis</groupId>
      <artifactId>xml-apis</artifactId>
      <type>jar</type>
      <version>1.3.04</version>
    </dependency>
    <dependency>
      <groupId>org.apache.felix</groupId>
      <artifactId>org.apache.felix.ipojo.metadata</artifactId>
      <type>jar</type>
      <version>1.4.0</version>
    </dependency>
    <dependency>
      <groupId>org.apache.felix</groupId>
      <artifactId>org.apache.felix.ipojo.manipulator</artifactId>
      <type>jar</type>
      <version>1.8.0</version>
    </dependency>
    <dependency>
      <groupId>asm</groupId>
      <artifactId>asm-all</artifactId>
      <type>jar</type>
      <version>3.0</version>
    </dependency>
  </dependencies>
</plugin>